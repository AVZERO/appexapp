/* Slide transitions */
.slide {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    display: none;
    justify-content: center;
    align-items: center;
}

.slide:first-child {
    display: block;
}

/* Initial state for cards */
.card {
    opacity: 0;
    transform: translateY(30px); /* Start slightly below the original position */
    transition: opacity 0.6s ease, transform 0.6s ease;
}

.card.active {
    opacity: 1;
    transform: translateY(0); /* Move to the original position */
}

/* Initial state for gallery items */
.gallery div {
    opacity: 0;
    transform: translateY(20px); /* Start slightly below the original position */
    transition: opacity 0.6s ease, transform 0.6s ease;
}

.gallery div.active {
    opacity: 1;
    transform: translateY(0); /* Move to the original position */
}
